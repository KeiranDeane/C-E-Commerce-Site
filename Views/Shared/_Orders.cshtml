@model 

<h1 class="event-group-heading">Current Orders</h1>

<div class="row">
    @if (Model.CurrentOrders.Any())
    {
        @Html.DisplayFor(x => x.CurrentOrders)
    }
    else
    {
        <div class="col-md-4 col-sm-6 col-xs-12">No Orders have been placed in thee last 24 hours</div>
    }
</div>

<h1 class="event-group-heading">Past Orders</h1>

<div class="row">
    @if (Model.PastOrders.Any())
    {
        @Html.DisplayFor(x => x.PastOrders)
    }
    else
    {
        <div class="col-md-4 col-sm-6 col-xs-12">No Orders</div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/ajax")
}
